<Window x:Class="Broobu.Fx.UI.Controls.ReleaseNotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Release Notes" Height="300" Width="300">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <RichTextBox Name="rtReleaseNotes" IsReadOnly="True"
                     IsReadOnlyCaretVisible="True"
                     VerticalScrollBarVisibility="Visible"
                     HorizontalScrollBarVisibility="Visible"
                     AcceptsReturn="True"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" FontSize="12" FontWeight="Bold" FontFamily="Courier New" />

    </Grid>
</Window>