<!-- This UserControl is the presentation of the GridPage in the snapped view state. -->
<UserControl
    x:Class="Broobu.MonitorCloud.UI.WinStore.View.GridSnappedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="320"
    xmlns:Core="using:DevExpress.Core"
    xmlns:Layout="using:DevExpress.UI.Xaml.Layout">

    <!-- Tiles present your data within interactive rectangles. They can display two headers (Header and NotificationHeader),
support selection, animation containers, and the MVVM design pattern. -->
    <Layout:Tile Margin="0,40"
        Header="All Items"
        VerticalAlignment="Top"
        Background="Gray"
        HorizontalAlignment="Center">
        <Image Source="ms-appx:///Assets/Items.png" Stretch="Fill" Width="48" Height="48"/>
    </Layout:Tile>
</UserControl>