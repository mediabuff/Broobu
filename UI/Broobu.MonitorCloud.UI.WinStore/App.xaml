<Application
    x:Class="Broobu.MonitorCloud.UI.WinStore.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Broobu.MonitorCloud.UI.WinStore"
    xmlns:view="using:Broobu.MonitorCloud.UI.WinStore.View"
    xmlns:vm="using:Broobu.MonitorCloud.UI.WinStore.ViewModel">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->

                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
                <ResourceDictionary>
                    <vm:OverViewPageViewModel x:Key="overviewPageViewModel"/>
                    <vm:ActivitiesPageViewModel x:Key="activitiesPageViewModel"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
